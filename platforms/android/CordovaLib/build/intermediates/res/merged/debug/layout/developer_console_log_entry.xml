<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:minHeight="32dp"
              android:padding="@dimen/developer_console_padding_horizontal">

    <ImageView
        android:id="@+id/developer_console_log_entry_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/developer_console_padding_horizontal" />

    <TextView
        android:id="@+id/developer_console_log_entry_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:typeface="monospace" />

</LinearLayout>